
 <div class="container">
    <br>
    <h2>Contáctame</h2>
    <div class="w3-card-4" style="width:100%">
      <%=image_tag "banner-contacto.jpg",:class => "img-responsive margin" ,:style =>"width:100%", :alt =>"Image"%>
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: contact_mail_path) do |f|  %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label "Nombre"  %>
          </div> 
          <div class="col-sm-9">
            <%= f.text_field :apikey, class: "form-control", placeholder: "Ingresa tu nombre", autofocus: true, required: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label "E-Mail"  %> <br/>
          </div>
          <div class="col-sm-6">
            <%= f.email_field :email, class: "form-control", placeholder: "Ingresa tu dirección de correo electrónico", required: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label "Mensaje"  %> <br/>
          </div>
          <div class="col-sm-9">
            <%= f.text_area :message, class: "form-control", rows: 10, placeholder: "Ingresa tu mensaje", required: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">  
            <%= f.submit "Enviar", class: 'btn btn-primary btn-lg'%> 
          </div>
        </div>
        <br>
        <% end %>
    </div>
    <br>
  </div>